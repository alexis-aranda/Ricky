<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".Funciones">

    <TextView
        android:id="@+id/textViewVaso1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaso1: verde"
        android:textColor="@android:color/holo_green_dark"/>

    <TextView
        android:id="@+id/textViewCont1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/textViewVaso2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaso2: azul"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/textViewCont2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/textViewVaso3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaso3: rojo"
        android:textColor="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/textViewCont3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/textViewVaso4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaso4: naranja"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
        android:id="@+id/textViewCont4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/textViewVaso5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaso5: amarillo"
        android:textColor="#AAAA00"/>

    <TextView
        android:id="@+id/textViewCont5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/textViewVaso6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaso6: marron"
        android:textColor="#800000"/>

    <TextView
        android:id="@+id/textViewCont6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <Button
        android:id="@+id/btnCantRocklets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:enabled="true"
        android:text="@string/text_conteo" />

    <Button
        android:id="@+id/btnPausar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/text_pausar" />

    <Button
        android:id="@+id/btnTobogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/text_tobogan" />

</LinearLayout>